---
import Layout from "../layouts/Layout.astro";
import AuthForm from "../components/AuthForm.astro";
---

<Layout title="Registrarse" description="Página de registro de usuario">
  <div class="min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md">
      <h1 class="text-2xl font-bold text-center mb-6">Registrarse</h1>
      <AuthForm mode="register" />
      <p class="text-center mt-4">
        ¿Ya tienes una cuenta? <a href="/iniciar-sesion" class="text-blue-500 hover:underline">Inicia sesión aquí</a>.
      </p>
    </div>
  </div>
</Layout>