---
import Layout from "../layouts/Layout.astro";
import AuthForm from "../components/AuthForm.astro";
---

<Layout title="Iniciar Sesión" description="Página de inicio de sesión">
  <div class="min-h-screen flex items-center justify-center">
    <div class="w-full max-w-md">
      <h1 class="text-2xl font-bold text-center mb-6">Iniciar Sesión</h1>
      <AuthForm mode="login" />
      <p class="text-center mt-4">
        ¿No tienes una cuenta? <a href="/registro" class="text-blue-500 hover:underline">Regístrate aquí</a>.
      </p>
    </div>
  </div>
</Layout>