---
const { mode = "login" } = Astro.props;
---

<form
  id={mode === "login" ? "login-form" : "register-form"}
  class="max-w-md mx-auto p-6 bg-white rounded-lg shadow-md"
>
  {mode === "register" && (
    <div class="mb-4">
      <label for="nombre" class="block text-gray-700">Nombre</label>
      <input type="text" id="nombre" name="nombre" required class="w-full px-3 py-2 border rounded-lg" />
    </div>
  )}
  <div class="mb-4">
    <label for="email" class="block text-gray-700">Email</label>
    <input type="email" id="email" name="email" required class="w-full px-3 py-2 border rounded-lg" />
  </div>
  <div class="mb-4">
    <label for="contraseña" class="block text-gray-700">Contraseña</label>
    <input type="password" id="contraseña" name="contraseña" required class="w-full px-3 py-2 border rounded-lg" />
  </div>
  <div id="message" class="mb-4 p-2 rounded-lg"></div>
  <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600">
    {mode === "login" ? "Iniciar Sesión" : "Registrarse"}
  </button>
</form>

<script is:inline src="/js/authForm.js"></script>